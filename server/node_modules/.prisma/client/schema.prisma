generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  kakaoId  String  @id @default(uuid())
  password String
  email    String  @unique
  nickname String
  scraps   Scrap[]
  events   Event[]
}

model Location {
  id        String          @id @default(uuid())
  name      String
  category  Category
  region    String //~시에 속하는지
  longitude Float
  latitude  Float
  scraps    Scrap[]
  events    EventLocation[]

  reviews Review[] @relation("LocationReviews")
}

model Review {
  id         Int      @id @default(autoincrement())
  locationId String
  userName   String
  rating     Int //@check(rating >= 1 && rating <= 5)
  comment    String?
  createdAt  DateTime @default(now())

  location Location @relation("LocationReviews", fields: [locationId], references: [id])
}

model Scrap {
  id           String   @id @default(uuid())
  scrapperId   String
  scrapPlaceId String
  createdAt    DateTime @default(now())
  scrapper     User     @relation(fields: [scrapperId], references: [email])
  scrapPlace   Location @relation(fields: [scrapPlaceId], references: [id])

  @@unique([scrapperId, scrapPlaceId])
}

model Event {
  id             String          @id @default(uuid())
  eventCreatorId String
  eventDate      DateTime
  creator        User            @relation(fields: [eventCreatorId], references: [email], onDelete: Cascade)
  locations      EventLocation[]
}

model EventLocation {
  id         String   @id @default(uuid())
  eventId    String
  locationId String
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  location   Location @relation(fields: [locationId], references: [id])
}

enum Category {
  TOUR
  FOOD
  SLEEP
}
